<!--検索対象モデルがUserの時 -->
<% if @range == "User" %>
  <h2>Users seach for <%= params[:word] %></h2>
  <table class="table table-hover table-inverse">
    <thead>
      <td></td>
      <th>name</th>
      <th>detail</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
  <h2>Books seach for <%= params[:word] %></h2>
  <table class="table table-hover table-inverse">
    <thead>
      <td></td>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.user.get_profile_image(50,50) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
